<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a href="{{ path('index') }}" class="nav-item d-flex">Home</a>
        <div class="nav-item">
            {% if app.user %}
                <span class="nav-link">
                    {{ app.user.name }}
                </span>
            {% endif %}
        </div>
        <div class="nav-item">
            {% set link_url = 'logout' %}
            {% set link_txt = 'Log Out' %}
            {% if not app.user %}
                {% set link_url = 'login' %}
                {% set link_txt = 'Log In' %}
            {% endif %}
            {% if app.request.get('_route') != 'login' %}
                <a class="nav-link" href="{{ path(link_url) }}">{{ link_txt }}</a>
            {% endif %}
        </div>
    </div>
</nav>